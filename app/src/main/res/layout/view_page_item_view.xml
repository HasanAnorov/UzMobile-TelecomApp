<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tarif_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/prosto10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/phone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#FFD12D"
            app:cardCornerRadius="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/min_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vector1"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/min_tv"
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:background="@drawable/min"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="@id/phone"
            app:layout_constraintEnd_toEndOf="@id/phone"/>

        <ImageView
            android:id="@+id/mb_tv"
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:background="@drawable/mb"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/internet_reklama"
            app:layout_constraintStart_toStartOf="@id/internet_reklama"
            app:layout_constraintEnd_toEndOf="@id/internet_reklama"/>

        <ImageView
            android:id="@+id/sms_tv"
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:background="@drawable/sms"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/sms_reklama"
            app:layout_constraintStart_toStartOf="@id/sms_reklama"
            app:layout_constraintEnd_toEndOf="@id/sms_reklama"/>

        <ImageView
            android:id="@+id/tarif_summa"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:background="@drawable/mln10"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/internet_reklama"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#FFD12D"
            app:cardCornerRadius="18dp"
            app:layout_constraintStart_toEndOf="@id/phone"
            app:layout_constraintEnd_toStartOf="@id/sms_reklama"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/mb_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vector2"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sms_reklama"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#FFD12D"
            app:cardCornerRadius="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/sms_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vector3"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>