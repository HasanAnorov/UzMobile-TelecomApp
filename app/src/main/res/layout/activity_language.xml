<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageActivity">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="9dp"
        android:background="@drawable/uzmobile_gsm_1"/>

    <TextView
        android:id="@+id/dm_mobile_g"
        android:layout_width="109dp"
        android:layout_height="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="9dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="590dp"
        android:text="@string/dm_mobile_group"
        android:textAppearance="@style/dm_mobile_g"
        android:gravity="center_horizontal|top" />

    <Button
        android:id="@+id/uzbek"
        app:layout_constraintTop_toTopOf="parent"
        android:text="O'zbek"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        android:background="@drawable/rectangle" />

    <Button
        android:id="@+id/russian"
        app:layout_constraintTop_toBottomOf="@id/uzbek"
        android:text="Русский"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle" />

    <Button
        android:id="@+id/uzbek_kiril"
        app:layout_constraintTop_toBottomOf="@id/russian"
        android:text="Ўзбек"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginEnd="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        />


</androidx.constraintlayout.widget.ConstraintLayout>