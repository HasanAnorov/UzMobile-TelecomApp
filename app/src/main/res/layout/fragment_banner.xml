<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BannerFragment">

    <LinearLayout
        android:id="@+id/blue_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.5"
        android:background="#01B4FF"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/banner_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.82"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reklama"
        android:layout_width="310dp"
        android:layout_height="140dp"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/prosto10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/phone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#FFD12D"
            app:cardCornerRadius="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vector1"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:background="@drawable/min"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="@id/phone"
            app:layout_constraintEnd_toEndOf="@id/phone"/>

        <TextView
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:background="@drawable/mb"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/internet_reklama"
            app:layout_constraintStart_toStartOf="@id/internet_reklama"
            app:layout_constraintEnd_toEndOf="@id/internet_reklama"/>

        <TextView
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:background="@drawable/sms"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/sms_reklama"
            app:layout_constraintStart_toStartOf="@id/sms_reklama"
            app:layout_constraintEnd_toEndOf="@id/sms_reklama"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:background="@drawable/mln10"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/internet_reklama"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#FFD12D"
            app:cardCornerRadius="18dp"
            app:layout_constraintStart_toEndOf="@id/phone"
            app:layout_constraintEnd_toStartOf="@id/sms_reklama"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vector2"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sms_reklama"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#FFD12D"
            app:cardCornerRadius="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vector3"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tarifprosto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reklama"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/abonettulovi"
        android:layout_width="89dp"
        android:layout_height="12dp"
        android:background="@drawable/abonettulovi"
        app:layout_constraintTop_toBottomOf="@id/reklama"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"/>

    <TextView
        android:id="@+id/sumunming"
        android:layout_width="89dp"
        android:layout_height="12dp"
        android:background="@drawable/sum10ming"
        app:layout_constraintTop_toBottomOf="@id/reklama"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="62dp"/>

    <ImageView
        android:id="@+id/line4"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@id/abonettulovi"
        app:layout_constraintEnd_toEndOf="@id/sumunming"
        app:layout_constraintTop_toBottomOf="@id/abonettulovi"
        android:layout_marginTop="14dp"/>

    <Button
        android:id="@+id/batafsil"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:text="Batafsil"
        android:textAllCaps="false"
        android:background="@drawable/batafsil_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="92dp"/>

    <Button
        android:id="@+id/ulanish"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:text="Ulanish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/ulanish_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="92dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="33dp"
        app:layout_constraintBottom_toTopOf="@id/batafsil"
        android:layout_marginBottom="12dp"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@+id/line4"
        android:text="@string/tarif_rejasi_jismoniy_va_yuridik_shaxslar_uchun_2019_yil_1_f_vraldan_30_iyunga_qadar_taqdim_etiladi_kiritilgan_daqiqa_limiti_mb_sms_1_kal_ndar_oyiga_taqdim_etiladi_tarif_rejasiga_o_zb_kt_l_kom_ak_sotuvlar_ofisi_shuningdek_dil_rlar_orqali_ulanish_mumkin_abon_nt_to_lovini_hisoblash_abon_nt_faol_bo_lganida_amalga_oshiriladi_agar_abon_nt_hisobida_pul_mablag_i_yetarli_bo_lmaganligi_sababli_abon_nt_bloklangan_bo_lsa_to_lov_kiritilmaguniga_qadar_to_lov_hisoblanmaydi_ushbu_tarif_rejasiga_ulanish_yoki_unga_o_tishda_abonent_to_lovi_kalendar_oyidagi_qolgan_kunlar_soniga_nisbatan_kiritilgan_daqiqalar_sms_va_internet_trafigi_shuningdek_qolgan_kunlar_soni_bo_yicha_to_liq_daqiqaga_yaxlitlangan_holda_hisoblab_chiqiladi"/>

</androidx.constraintlayout.widget.ConstraintLayout>